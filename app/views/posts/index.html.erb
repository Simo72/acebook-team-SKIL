   <%= button_to 'New Post', new_post_path, method: :get %><br>

<% @posts.reverse_each do |post| %>
  <div class="panel panel-default">
    <div class="panel-heading"><%= post.user.email %></div>
    <div class="panel-body">
      <%= post.message %><br><br>
      <%if post.comments.any? %>
        <div class="panel panel-default">
            <div class="panel-body">
              <b>Comments:</b>
            <br>
            <ul>
            <% post.comments.each do |comment| %>
                <li>
                <%= comment.text %>
                </li>
            <%end%>
            </ul>
          </div>
        </div>
      <%end%>
    </div>
  <div class="panel-footer">
    <%= post.created_at.strftime("%d/%m/%Y %H:%M") %>
    <%= link_to 'Show', post_path(post)%>
    <%= link_to 'Add Comment', new_comment_path(post_id: post.id)  %>
    <span style="color:#8B0000" class="glyphicon glyphicon-heart pull-right"></span>
  </div>
  </div>
<% end %>
