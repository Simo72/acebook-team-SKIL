<% @posts.reverse_each do |post| %>
<<<<<<< HEAD
  <div class="panel panel-default">
    <div class="panel-heading"><%= post.user.email %></div>
    <div class="panel-body">
      <%= simple_format(post.message) %><br><br>
      <%if post.comments.any? %>
        <div class="panel panel-default">
          <div class="panel-body">
            Comments:
            <br>
            <ul>
            <% post.comments.each do |comment| %>
                <li>
                <%= comment.text %>
                </li>
            <%end%>
            </ul>
          </div>
        </div>
      <%end%>
    </div>
  <div class="panel-footer">
    <%= post.created_at.strftime("%d/%m/%Y %H:%M") %>
    <%= link_to 'Show', post_path(post)%>
    <% if current_user %>
      <% current_user_like = post.likes.select { |like| like.user_id == current_user.id}[0] %>
      <% if current_user_like.nil? %>
        <%= button_to 'Like', post_likes_path(user_id:current_user.id, post_id: post.id) %>
      <% else %>
        <%= button_to 'Unlike',
            post_like_path(current_user_like.id, current_user_like),
            method: :delete %>
      <% end %>
      <% if post.likes.count > 0 %>
        <%= " #{post.likes.count} Liked this" %>
      <% end %>
    <% end %>
  </div>
  </div>
<% end %>
  <br>
<%= link_to new_post_path do %>
  New post
<% end %>
