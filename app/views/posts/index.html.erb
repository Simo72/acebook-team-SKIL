<% @posts.reverse_each do |post| %>
  <li>
  <p><%= post.message %></p>
  <%= post.created_at.strftime("%d/%m/%Y %H:%M") %>
  </li>

  <%= link_to 'Show', post_path(post)%>
  <% liked = post.likes.select { |like| like.user_id == current_user.id}.empty? %>
  <%= liked %>
  <% if liked %>
    <%= button_to 'Like', post_likes_path(user_id:current_user.id, post_id: post.id) %>
  <% else %>
    <%= button_to 'Unlike' %>
  <% end %>
    <% if post.likes.count > 0 %>
      <%= " #{post.likes.count} Liked this" %>
    <% end %>
<% end %>
<br>
<%= link_to new_post_path do %>
  New post
<% end %>
